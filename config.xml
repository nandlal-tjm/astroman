<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.astroman.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Astroman</name>
    <description>
        http://astroman.fr/
    </description>
    <author email="best.tjm@gmail.com" href="http://www.fiverr.com/expert2014">
        Nand Lal
    </author>
    <content src="index.html" />
    <!-- <plugin name="cordova-plugin-inappbrowser" spec="^3.1.0" /> -->
    <!-- <engine name=”cordova” version=”>=9.0.0"/> -->
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
	<access origin="http://astroman.fr*" />
    <allow-navigation href="*" />
    <allow-navigation href="http://astroman.fr*" />
	<allow-intent href="*" />
	<access origin="*" />
  <icon src="icon.png" />
  <platform name="android">
      <!-- Portrait -->
      <splash qualifier="port-ldpi" src="www/res/screen/android/splash-port-ldpi.png"  />
      <splash qualifier="port-mdpi" src="www/res/screen/android/splash-port-mdpi.png" />
      <splash qualifier="port-hdpi" src="www/res/screen/android/splash-port-hdpi.png" />
      <splash qualifier="port-xhdpi" src="www/res/screen/android/splash-port-xhdpi.png" />

  </platform>
  <preference name="SplashScreenDelay" value="4000" />
  <preference name="android-targetSdkVersion" value="28" />
</widget>
